.form-wrapper(data-form-wrapper data-lenis-prevent)
    .form-wrapper__block
        button.form-close(data-close-form)
            span Закрити
            .burger__close
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.99902 6L10.9488 10.9497L17.3127 17.3137" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
                    <path d="M17.3127 5.68629L12.363 10.636L5.99902 17" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
        form(data-form=attr autocomplete="off").form
            .form-title.title Замовити дзвінок
            .form-description.text Якщо у вас виникли питання або потрібна консультація, наші менеджери з радістю допоможуть вам!
            .form-field.form-field-input(data-field-input data-field-name data-status="field--inactive")
                .input-title Ім’я:
                input(type='text' name="name" placeholder="Ваше ім’я").form-field__input
                .input-message(data-input-message)
            .form-field.disabled.form-field-input(data-field-input data-field-phone data-status="field--inactive")
                .input-title Телефон:
                input(type='text' name="phone" placeholder="+__ (___) __-__-___").form-field__input
                .input-message(data-input-message)
            .form-field.disabled.form-field-input(data-field-input data-field-comment data-status="field--inactive")
                .input-title Коментар:
                textarea(type='text' name="comment" placeholder="Введіть коментар").form-field__input.text-input
                .input-message(data-input-message)
            button( type="submit" data-btn-submit).button
                    span(data-btn-submit-text) Надіслати повідомлення
